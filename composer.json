{
    "name": "vassilidev/laraperm",
    "description": "Create and manage permission and roles for your user !",
    "license": "MIT",
    "keywords": [
        "vassilidev",
        "laravel",
        "permission",
        "permissions",
        "roles",
        "acl",
        "rbac",
        "security",
        "laraperm"
    ],
    "authors": [
        {
            "name": "Vassili Joffroy",
            "email": "vassilidevnet@gmail.com",
            "homepage": "https://vassili-joffroy.fr",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/vassilidev/laraperm",
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/auth": "^8.0|^9.0|^10.0",
        "illuminate/container": "^8.0|^9.0|^10.0",
        "illuminate/contracts": "^8.0|^9.0|^10.0",
        "illuminate/database": "^8.0|^9.0|^10.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Vassilidev\\Laraperm\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vassilidev\\Laraperm\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Vassilidev\\Laraperm\\LarapermServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "phpunit",
        "format": "php-cs-fixer fix --allow-risky=yes",
        "analyse": "phpstan analyse"
    }
}
